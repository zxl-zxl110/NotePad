<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.notepad">

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="35" />

    <application
        android:icon="@drawable/app_notes"
        android:label="@string/app_name">

        <!-- 内容提供者：声明权限和类 -->
        <provider
            android:name="com.example.android.notepad.NotePadProvider"
            android:authorities="com.example.android.notepad"
            android:exported="false" />

        <!-- 笔记列表页面（主入口） -->
        <activity
            android:name="com.example.android.notepad.NotesList"
            android:label="@string/app_name"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- 笔记编辑页面 -->
        <activity
            android:name="com.example.android.notepad.NoteEditor"
            android:exported="true"
            android:label="@string/title_note_editor"
            android:theme="@android:style/Theme.Light">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <action android:name="android.intent.action.EDIT" />
                <action android:name="android.intent.action.INSERT" />
                <category android:name="android.intent.category.DEFAULT" />
                <data android:mimeType="vnd.android.cursor.item/vnd.example.note" />
            </intent-filter>
        </activity>

        <!-- 标题编辑页面 -->
        <activity
            android:name="com.example.android.notepad.TitleEditor"
            android:exported="true"
            android:label="@string/title_note_title_editor"
            android:theme="@android:style/Theme.Dialog">
            <intent-filter>
                <action android:name="com.example.android.notepad.action.EDIT_TITLE" />
                <category android:name="android.intent.category.DEFAULT" />
                <data android:mimeType="vnd.android.cursor.item/vnd.example.note" />
            </intent-filter>
        </activity>

        <!-- 动态文件夹 -->
        <activity
            android:name="com.example.android.notepad.NotesLiveFolder"
            android:exported="true"
            android:label="@string/live_folder_name">
            <intent-filter>
                <action android:name="android.intent.action.CREATE_LIVE_FOLDER" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
    </application>
</manifest>